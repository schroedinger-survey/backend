{
  "swagger": "2.0",
  "info": {
    "description": "Schroedinger's REST API documentation",
    "version": "1.0.0",
    "title": "Schroedinger API",
    "contact": {
      "email": "you@schroedinger.de"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "tags": [
    {
      "name": "user"
    },
    {
      "name": "survey"
    },
    {
      "name": "submission"
    },
    {
      "name": "token"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "create a new user account",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "recaptcha_token",
            "type": "string",
            "required": true
          },
          {
            "in": "body",
            "name": "payload",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserRegistration"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created"
          },
          "400": {
            "description": "User could not be created"
          },
          "409": {
            "description": "Username and/or email allready exist"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "user login with given credentials",
        "parameters": [
          {
            "in": "body",
            "name": "payload",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User login ok",
            "schema": {
              "$ref": "#/definitions/ExampleToken"
            }
          },
          "403": {
            "description": "Wrong credentials"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/user/logout": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "user logout from his account",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "successfully logged out, banned token"
          }
        }
      }
    },
    "/user/info": {
      "post": {
        "tags": [
          "user"
        ],
        "summary": "checks if user and user jwt-token are valid",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User and jwt-token are valid",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "403": {
            "description": "User not valid, authorization is missing"
          },
          "404": {
            "description": "User belonging to token not found"
          }
        }
      }
    },
    "/survey": {
      "post": {
        "tags": [
          "survey"
        ],
        "summary": "user creates a new survey",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "payload",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CreateSurvey"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Survey was created",
            "schema": {
              "$ref": "#/definitions/UserSurvey"
            }
          },
          "400": {
            "description": "could not be created"
          }
        }
      }
    },
    "/survey/public": {
      "get": {
        "tags": [
          "survey"
        ],
        "summary": "retrieves public surveys, based on a search term",
        "parameters": [
          {
            "in": "query",
            "type": "string",
            "name": "title"
          },
          {
            "in": "query",
            "type": "string",
            "name": "description"
          },
          {
            "in": "query",
            "type": "string",
            "name": "page_number",
            "default": 0
          },
          {
            "in": "query",
            "type": "string",
            "name": "page_size",
            "default": 5
          },
          {
            "in": "query",
            "type": "string",
            "name": "start_date"
          },
          {
            "in": "query",
            "type": "string",
            "name": "end_date"
          }
        ],
        "responses": {
          "200": {
            "description": "survey matching the search term was found",
            "schema": {
              "items": {
                "$ref": "#/definitions/UserSurvey"
              }
            }
          }
        }
      }
    },
    "/survey/public/{survey_id}": {
      "get": {
        "tags": [
          "survey"
        ],
        "summary": "a specific survey is fetched",
        "parameters": [
          {
            "in": "path",
            "name": "survey_id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "requested survey is available",
            "schema": {
              "$ref": "#/definitions/RequestedSurvey"
            }
          },
          "400": {
            "description": "survey not available"
          }
        }
      }
    },
    "/survey/public/count": {
      "get": {
        "tags": [
          "survey"
        ],
        "summary": "gets the count of all existing surveys",
        "parameters": [
          {
            "in": "query",
            "type": "string",
            "name": "title"
          },
          {
            "in": "query",
            "type": "string",
            "name": "description"
          },
          {
            "in": "query",
            "type": "string",
            "name": "start_date"
          },
          {
            "in": "query",
            "type": "string",
            "name": "end_date"
          }
        ],
        "responses": {
          "200": {
            "description": "count was calculated",
            "schema": {
              "$ref": "#/definitions/Count"
            }
          }
        }
      }
    },
    "/survey/secured": {
      "get": {
        "tags": [
          "survey"
        ],
        "summary": "all survey belonging to the user are fetched",
        "parameters": [
          {
            "in": "query",
            "type": "string",
            "name": "title"
          },
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "type": "string",
            "name": "description"
          },
          {
            "in": "query",
            "type": "string",
            "name": "page_number",
            "default": 0
          },
          {
            "in": "query",
            "type": "string",
            "name": "page_size",
            "default": 5
          },
          {
            "in": "query",
            "type": "string",
            "name": "start_date"
          },
          {
            "in": "query",
            "type": "string",
            "name": "end_date"
          }
        ],
        "responses": {
          "200": {
            "description": "all surveys belonging to the user",
            "schema": {
              "items": {
                "$ref": "#/definitions/RequestedSurvey"
              }
            }
          }
        }
      }
    },
    "/survey/secured/{survey_id}": {
      "get": {
        "tags": [
          "survey"
        ],
        "summary": "a specific survey is fetched",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "token",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "survey_id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "requested survey is available",
            "schema": {
              "$ref": "#/definitions/RequestedSurvey"
            }
          },
          "400": {
            "description": "survey not available"
          }
        }
      }
    },
    "/survey/secured/count": {
      "get": {
        "tags": [
          "survey"
        ],
        "summary": "gets the count of all existing surveys",
        "parameters": [
          {
            "in": "query",
            "type": "string",
            "name": "title"
          },
          {
            "in": "query",
            "type": "string",
            "name": "description"
          },
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "type": "string",
            "name": "start_date"
          },
          {
            "in": "query",
            "type": "string",
            "name": "end_date"
          }
        ],
        "responses": {
          "200": {
            "description": "count was calculated",
            "schema": {
              "$ref": "#/definitions/Count"
            }
          }
        }
      }
    },
    "/submission": {
      "post": {
        "tags": [
          "submission"
        ],
        "summary": "user took a survey and submits it",
        "parameters": [
          {
            "in": "query",
            "name": "token",
            "type": "string"
          },
          {
            "in": "body",
            "name": "payload",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Submission"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "submission successfull"
          },
          "400": {
            "description": "wrong parameters or id not found"
          },
          "500": {
            "description": "submission could not be handed in"
          }
        }
      },
      "get": {
        "tags": [
          "submission"
        ],
        "summary": "owner can get submissions to a survey",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "survey_id",
            "type": "string",
            "required": true
          },
          {
            "in": "query",
            "type": "string",
            "name": "page_number",
            "default": 0
          },
          {
            "in": "query",
            "type": "string",
            "name": "page_size",
            "default": 5
          }
        ],
        "responses": {
          "200": {
            "description": "found submissions to survey",
            "schema": {
              "items": {
                "$ref": "#/definitions/Submission"
              }
            }
          }
        }
      }
    },
    "/submission/count": {
      "get": {
        "tags": [
          "submission"
        ],
        "summary": "get the count of all submissions available for a specific survey",
        "parameters": [
          {
            "in": "query",
            "name": "survey_id",
            "required": true,
            "type": "string"
          },
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "count was calculated",
            "schema": {
              "$ref": "#/definitions/Count"
            }
          }
        }
      }
    },
    "/token": {
      "post": {
        "tags": [
          "token"
        ],
        "summary": "create and retrieve a specific number of token, in a link they can be used to provide access to secure surveys",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "payload",
            "schema": {
              "$ref": "#/definitions/TokenRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "token for links to share a survey",
            "schema": {
              "items": {
                "$ref": "#/definitions/ExampleToken"
              }
            }
          }
        }
      }
    },
    "/token/email": {
      "post": {
        "tags": [
          "token"
        ],
        "summary": "send linkt to secured survey per mail",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "payload",
            "required": true,
            "schema": {
              "$ref": "#/definitions/SendTokenPerMailRequest"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "links were sent per mail to emails in body"
          },
          "403": {
            "description": "User is not authorized to send mails"
          },
          "500": {
            "description": "Something went wrong, emails could not be send"
          }
        }
      }
    }
  },
  "definitions": {
    "SendTokenPerMailRequest": {
      "type": "object",
      "required": [
        "survey_id",
        "emails"
      ],
      "properties": {
        "survey_id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "emails": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Mail"
          }
        }
      }
    },
    "Mail": {
      "type": "string",
      "example": "maxmusterman@mail.de"
    },
    "TokenRequest": {
      "type": "object",
      "required": [
        "survey_id",
        "amount"
      ],
      "properties": {
        "survey_id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "amount": {
          "type": "number",
          "example": 30
        }
      }
    },
    "User": {
      "type": "object",
      "required": [
        "id",
        "username",
        "email",
        "created"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "username": {
          "type": "string",
          "example": "maxmusterman"
        },
        "email": {
          "type": "string",
          "example": "max@musterman.de"
        },
        "created": {
          "type": "string",
          "example": "25.09.2020"
        }
      }
    },
    "Count": {
      "type": "object",
      "required": [
        "count"
      ],
      "properties": {
        "count": {
          "type": "number",
          "example": 12
        }
      }
    },
    "ExampleToken": {
      "type": "object",
      "required": [
        "token"
      ],
      "properties": {
        "token": {
          "type": "string",
          "example": "exampleToken"
        }
      }
    },
    "UserRegistration": {
      "type": "object",
      "required": [
        "username",
        "password",
        "email"
      ],
      "properties": {
        "username": {
          "type": "string",
          "example": "maxmustermann"
        },
        "password": {
          "type": "string",
          "example": "astrongpassword"
        },
        "email": {
          "type": "string",
          "example": "maxmustermann@contact.de"
        }
      }
    },
    "UserLogin": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string",
          "example": "maxmustermann"
        },
        "password": {
          "type": "string",
          "example": "astrongpassword"
        }
      }
    },
    "ConstrainedQuestion": {
      "type": "object",
      "required": [
        "question_text",
        "position",
        "options"
      ],
      "properties": {
        "question_text": {
          "type": "string",
          "example": "Do cats have fluffy fur?"
        },
        "position": {
          "type": "number",
          "example": 2
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConstrainedOption"
          }
        }
      }
    },
    "ConstrainedQuestionAsAnswer": {
      "type": "object",
      "required": [
        "id",
        "question_text",
        "position",
        "options"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "question_text": {
          "type": "string",
          "example": "Do cats have fluffy fur?"
        },
        "position": {
          "type": "number",
          "example": 2
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConstrainedOption"
          }
        }
      }
    },
    "ConstrainedOption": {
      "type": "object",
      "required": [
        "answer",
        "position"
      ],
      "properties": {
        "answer": {
          "type": "string",
          "example": "Very much"
        },
        "position": {
          "type": "number",
          "example": 1
        }
      }
    },
    "FreestyleQuestion": {
      "type": "object",
      "required": [
        "question_text",
        "position"
      ],
      "properties": {
        "question_text": {
          "type": "string",
          "example": "Do cats have fluffy fur?"
        },
        "position": {
          "type": "number",
          "example": 2
        }
      }
    },
    "FreestyleQuestionAsAnswer": {
      "type": "object",
      "required": [
        "id",
        "question_text",
        "position"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "question_text": {
          "type": "string",
          "example": "Do cats have fluffy fur?"
        },
        "position": {
          "type": "number",
          "example": 2
        }
      }
    },
    "AnswerdedConstrainedQuestion": {
      "type": "object",
      "required": [
        "constrained_question_id",
        "constrained_questions_option_id"
      ],
      "properties": {
        "constrained_question_id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "constrained_questions_option_id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        }
      }
    },
    "AnswerdedFreestyleQuestion": {
      "type": "object",
      "required": [
        "freestyle_question_id",
        "freestyle_answers"
      ],
      "properties": {
        "freestyle_question_id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "freestyle_answers": {
          "type": "string",
          "example": "Not that much, they scratch me often,so no"
        }
      }
    },
    "CreateSurvey": {
      "type": "object",
      "required": [
        "title",
        "description",
        "start_date",
        "end_date",
        "secured",
        "constrained_questions",
        "freestyle_questions"
      ],
      "properties": {
        "title": {
          "type": "string",
          "example": "Experience when working with Schroedinger"
        },
        "description": {
          "type": "string",
          "example": "The result of this survey is used to improve the user experience of this app"
        },
        "start_date": {
          "type": "string",
          "example": "25.09.2020"
        },
        "end_date": {
          "type": "string",
          "example": "25.10.2020"
        },
        "secured": {
          "type": "boolean",
          "example": false
        },
        "constrained_questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConstrainedQuestion"
          }
        },
        "freestyle_questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FreestyleQuestion"
          }
        }
      }
    },
    "RequestedSurvey": {
      "type": "object",
      "required": [
        "id",
        "title",
        "description",
        "start_date",
        "end_date",
        "secured",
        "constrained_questions",
        "freestyle_questions"
      ],
      "properties": {
        "id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "title": {
          "type": "string",
          "example": "Experience when working with Schroedinger"
        },
        "description": {
          "type": "string",
          "example": "The result of this survey is used to improve the user experience of this app"
        },
        "start_date": {
          "type": "string",
          "example": "25.09.2020"
        },
        "end_date": {
          "type": "string",
          "example": "25.10.2020"
        },
        "secured": {
          "type": "boolean",
          "example": false
        },
        "constrained_questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConstrainedQuestionAsAnswer"
          }
        },
        "freestyle_questions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FreestyleQuestionAsAnswer"
          }
        }
      }
    },
    "UserSurvey": {
      "type": "object",
      "required": [
        "survey_id",
        "title",
        "description",
        "start_date",
        "end_date",
        "constrained_answers",
        "freestyle_answers"
      ],
      "properties": {
        "survey_id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "title": {
          "type": "string",
          "example": "Experience when working with Schroedinger"
        },
        "start_date": {
          "type": "string",
          "example": "25.09.2020"
        },
        "end_date": {
          "type": "string",
          "example": "25.10.2020"
        },
        "description": {
          "type": "string",
          "example": "The result of this survey is used to improve the user experience of this app"
        },
        "constrained_answers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ConstrainedQuestionAsAnswer"
          }
        },
        "freestyle_answers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FreestyleQuestionAsAnswer"
          }
        }
      }
    },
    "Submission": {
      "type": "object",
      "required": [
        "survey_id",
        "constrained_answers",
        "freestyle_answers"
      ],
      "properties": {
        "survey_id": {
          "type": "string",
          "example": "fgHd-73hg-83HZ"
        },
        "constrained_answers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AnswerdedConstrainedQuestion"
          }
        },
        "freestyle_answers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AnswerdedFreestyleQuestion"
          }
        }
      }
    }
  }
}