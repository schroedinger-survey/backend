{
  "name": "schroedinger-backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "server-dev": "NODE_ENV=dev nodemon server.js",
    "server-prod": "NODE_ENV=production node server.js",
    "worker-dev": "NODE_ENV=dev nodemon worker.js",
    "worker-prod": "NODE_ENV=production node worker.js",
    "migrate-prod": "NODE_ENV=production node scripts/migrate.js",
    "migrate-dev": "NODE_ENV=dev node scripts/migrate.js",
    "migrate-test": "NODE_ENV=test node scripts/migrate.js",
    "index-prod": "NODE_ENV=production node scripts/indexing.js",
    "index-dev": "NODE_ENV=dev node scripts/indexing.js",
    "index-test": "NODE_ENV=test node scripts/indexing.js",
    "test-dev": "NODE_ENV=dev jest ./tests/**/*.test.js --coverage --detectOpenHandles",
    "test-test": "NODE_ENV=test jest ./tests/**/*.test.js --coverage --detectOpenHandles",
    "lint": "eslint *.js ./src/**/*.js ./tests/**/*.test.js",
    "fix": "eslint --fix *.js ./src/**/*.js ./tests/**/*.test.js",
    "debug": "NODE_ENV=dev jest tests/rest/SubmissionRouter.test.js"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^7.9.0",
    "amqplib": "^0.6.0",
    "atob": "^2.1.2",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "express-rate-limit": "^5.1.3",
    "express-validator": "^6.6.1",
    "express-winston": "^4.0.4",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.11",
    "pg": "^8.3.0",
    "redis": "^3.0.2",
    "swagger-ui-express": "^4.1.4",
    "uuid": "^8.3.0",
    "winston": "^3.0.0",
    "winston-elasticsearch": "^0.8.8"
  },
  "devDependencies": {
    "@jest/globals": "^26.4.1",
    "debug": "^4.1.1",
    "eslint": "^7.7.0",
    "jest": "^26.4.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  },
  "jest": {
    "verbose": true,
    "testTimeout": 20000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "commonjs": true,
      "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 11
    },
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "no-unused-vars": 0,
      "prefer-const": "error",
      "no-useless-constructor": "error",
      "no-console": "error",
      "no-empty": "error",
      "no-irregular-whitespace": "error",
      "no-unreachable": "error",
      "no-unsafe-negation": "error",
      "array-callback-return": "error",
      "block-scoped-var": "error",
      "default-case": "warn",
      "eqeqeq": "error",
      "dot-notation": "warn",
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "no-lone-blocks": "error",
      "no-param-reassign": "error",
      "no-self-assign": "error",
      "no-self-compare": "error",
      "no-useless-concat": "error",
      "no-warning-comments": "error",
      "no-const-assign": "error",
      "radix": "error",
      "yoda": "error",
      "capitalized-comments": [
        "error"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-trailing-spaces": "error",
      "no-unneeded-ternary": "error",
      "no-var": "error",
      "no-prototype-builtins": "off"
    }
  }
}
