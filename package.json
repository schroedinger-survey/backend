{
  "name": "schroedinger-backend",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">= 14.0.0"
  },
  "scripts": {
    "server-dev": "NODE_ENV=dev nodemon schroedinger-server.ts",
    "server-prod": "NODE_ENV=production ts-node schroedinger-server.ts",
    "worker-dev": "NODE_ENV=dev nodemon schroedinger-worker.ts",
    "worker-prod": "NODE_ENV=production ts-node schroedinger-worker.ts",
    "cron-dev": "NODE_ENV=dev nodemon schroedinger-cron.ts",
    "cron-prod": "NODE_ENV=production ts-node schroedinger-cron.ts",
    "migrate-prod": "NODE_ENV=production ts-node scripts/migrate.ts",
    "migrate-dev": "NODE_ENV=dev ts-node scripts/migrate.ts",
    "migrate-test": "NODE_ENV=test ts-node scripts/migrate.ts",
    "index-prod": "NODE_ENV=production ts-node scripts/indexing.ts",
    "index-dev": "NODE_ENV=dev ts-node scripts/indexing.ts",
    "index-test": "NODE_ENV=test ts-node scripts/indexing.ts",
    "test-dev": "NODE_ENV=dev jest --coverage",
    "test-test": "NODE_ENV=test jest --coverage",
    "lint": "eslint *.ts",
    "fix": "eslint --fix *.ts",
    "debug": "NODE_ENV=dev jest tests/rest/UserServices.test.ts"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.10.4",
    "@elastic/elasticsearch": "^6.8.8",
    "@types/atob": "^2.1.2",
    "@types/bcrypt": "^3.0.0",
    "@types/btoa": "^1.2.3",
    "@types/node": "^14.0.14",
    "@types/uuid": "^8.0.0",
    "amqplib": "^0.6.0",
    "atob": "^2.1.2",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cron": "^1.8.2",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-http-context": "^1.2.4",
    "express-validator": "^6.6.1",
    "express-winston": "^4.0.4",
    "helmet": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.11",
    "pg": "^8.3.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2",
    "uuidv4": "^6.2.3",
    "winston": "^3.0.0",
    "winston-elasticsearch": "^0.7.13"
  },
  "devDependencies": {
    "@jest/globals": "^26.4.1",
    "@types/jest": "^26.0.13",
    "debug": "^4.1.1",
    "eslint": "^7.7.0",
    "jest": "^26.4.0",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0"
  },
  "jest": {
    "verbose": true,
    "testTimeout": 30000,
    "roots": [
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "commonjs": true,
      "es2020": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 11,
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "no-unused-vars": 0,
      "prefer-const": "error",
      "no-useless-constructor": "error",
      "no-console": "error",
      "no-empty": "error",
      "no-irregular-whitespace": "error",
      "no-unreachable": "error",
      "no-unsafe-negation": "error",
      "array-callback-return": "error",
      "block-scoped-var": "error",
      "default-case": "warn",
      "eqeqeq": "error",
      "dot-notation": "warn",
      "no-else-return": [
        "error",
        {
          "allowElseIf": false
        }
      ],
      "no-lone-blocks": "error",
      "no-param-reassign": "error",
      "no-self-assign": "error",
      "no-self-compare": "error",
      "no-useless-concat": "error",
      "no-warning-comments": "error",
      "no-const-assign": "error",
      "radix": "error",
      "yoda": "error",
      "capitalized-comments": [
        "error"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-trailing-spaces": "error",
      "no-unneeded-ternary": "error",
      "no-var": "error",
      "no-prototype-builtins": "off"
    }
  }
}
